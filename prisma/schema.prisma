// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

// ----------------------------------------------
// ENUMS (Used in the models below)
// ----------------------------------------------

enum SubscriptionPlan {
  FREE
  PAID
}

enum GiftStatus {
  PENDING
  PAID
  REFUNDED
}

enum QRType {
  UPLOAD
  GIFT
}

// +++ ADDED: For the new signup flow
enum CreatorRole {
  BRIDE
  GROOM
  // You could add PARTNER, FRIEND, PLANNER etc. later
}

// ----------------------------------------------
// AUTH MODELS (For Point 2: Account Creation)
// +++ RE-INTRODUCED: Standard NextAuth.js models
// ----------------------------------------------

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String? // +++ ADDED: To support email/password login
  accounts      Account[]
  sessions      Session[]

  // +++ UPDATED: one-to-one relation to the renamed event
  weddingEvent WeddingEvent?

  // +++ KEPT: Relation from the lean schema
  wishlist WishlistItem[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


// ----------------------------------------------
// WEDDING PLATFORM MODELS
// ----------------------------------------------

// +++ RENAMED: from Event to WeddingEvent
model WeddingEvent {
  id String @id @default(cuid())

  // one-to-one owner, unique enforces a single event per user
  ownerId String @unique
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  // This is the "wedding account name" / "title" from your prompt
  title         String // e.g., "Alex & Jordan's Wedding"
  
  // +++ ADDED: Fields from the new signup flow
  creatorRole CreatorRole? // Stores the signup radio button choice
  partnerName String?      // Stores the "significant other's name"

  // This is the custom URL
  subdomain     String   @unique // "alex-and-jordan"
  
  timeZone      String   // IANA, example "Europe/London"
  ceremonyAt    DateTime // store UTC
  coverImageUrl String?  // hero image
  isPublic      Boolean  @default(true)
  themeJson     Json?    // design config blob

  // Merged fields from the first schema
  location         String?
  ourStory         String? @db.Text
  venueName        String?
  venueAddress     String?
  subscriptionPlan SubscriptionPlan @default(FREE)
  stripeCustomerId String?          @unique

  // Relations
  images  Image[]
  gifts   Gift[]
  qrcodes QRCode[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([subdomain])
}

model Image {
  id String @id @default(cuid())
  
  // +++ UPDATED: Relation to WeddingEvent
  weddingEventId String
  weddingEvent   WeddingEvent @relation(fields: [weddingEventId], references: [id], onDelete: Cascade)

  provider    String // "cloudinary" or "uploadthing"
  providerKey String // public_id or key for deletion
  url         String // public URL to render

  width         Int?
  height        Int?
  takenAt       DateTime?
  uploaderName  String?
  uploaderEmail String?

  deletedAt DateTime? // soft delete
  createdAt DateTime @default(now())

  @@index([weddingEventId])
  @@index([weddingEventId, deletedAt])
  @@index([provider, providerKey])
}

model WishlistItem {
  id      String @id @default(cuid())
  
  // +++ KEPT: Relation from the lean schema
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  title        String
  description  String?
  imageUrl     String?
  externalLink String?
  targetAmount Int // cents
  fundedAmount Int     @default(0) // cents
  allowPartial Boolean @default(true)
  accentColor  String?

  gifts Gift[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}

model Gift {
  id      String @id @default(cuid())
  
  // +++ UPDATED: Relation to WeddingEvent
  weddingEventId String
  weddingEvent   WeddingEvent @relation(fields: [weddingEventId], references: [id], onDelete: Cascade)

  wishlistItemId String?
  wishlistItem   WishlistItem? @relation(fields: [wishlistItemId], references: [id], onDelete: SetNull)

  amount     Int // cents
  currency   String // "gbp"
  payerName  String?
  payerEmail String?

  provider        String? // "stripe"
  paymentIntentId String?
  status          GiftStatus @default(PENDING)

  createdAt DateTime @default(now())

  @@index([weddingEventId, status])
  @@index([wishlistItemId])
}

model QRCode {
  id      String @id @default(cuid())
  
  // +++ UPDATED: Relation to WeddingEvent
  weddingEventId String
  weddingEvent   WeddingEvent @relation(fields: [weddingEventId], references: [id], onDelete: Cascade)

  code      String   @unique // short token for /q/abc123
  type      QRType
  createdAt DateTime @default(now())

  @@index([weddingEventId, type])
}